@model CompanyApp.Entities.Department

@{
    ViewData["Title"] = "Edit Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edit Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input id="checkboxStatus" type="text" asp-for="Status" style="display: none" />
                <label><input type="checkbox" id="statusLabel"></label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Department" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>
    if ($("#checkboxStatus").val() == "True") {
        $("#statusLabel").prop("checked", true);
    }
    else {
        $("#statusLabel").prop("checked", false);
    }
    $('#statusLabel').on('change', function () {
        debugger
        if ($(this).is(":checked")) {
            $('#checkboxStatus').val('True');
        } else {
            $('#checkboxStatus').val('False');
        }
    });
</script>


<div>
    <a asp-action="Index">Back to List</a>
</div>

